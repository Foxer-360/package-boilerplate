{
  "name": "@foxer360/package-boilerplate",
  "version": "0.1.0",
  "description": "Simple boilerplate for TypeScript package without React.",
  "main": "lib/index.js",
  "repository": "git@github.com:Foxer-360/package-boilerplate.git",
  "author": "Filip Such√Ω <nevim42@gmail.com>",
  "typings": "lib/@types",
  "private": true,
  "scripts": {
    "build": "yarn compile && yarn babel && yarn resolveDefs",
    "rebuild": "yarn clean && yarn build",
    "compile": "tsc --build tsconfig.build.json",
    "babel": "babel lib --out-dir lib",
    "resolveDefs": "node scripts/resolveDefinitions.js",
    "test": "jest",
    "clean": "rm -rf ./lib"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-typescript": "^7.0.0-rc.1",
    "@types/jest": "^23.3.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {},
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "tests\\/.*(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "moduleNameMapper": {
      "@source/(.*)": "<rootDir>/src/$1"
    }
  }
}
